# Production Environment Variables
# Copy this file to .env.production and update with production values

# Database Configuration
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@localhost:5432/revas_db

# JWT Configuration (MUST be at least 32 characters)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG
JWT_EXPIRES_IN=7d

# Application Configuration
NEXT_PUBLIC_APP_NAME=Revas
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_BASE_URL=https://your-production-domain.com

# Node Environment
NODE_ENV=production

# Optional: Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Optional: Logging
LOG_LEVEL=info
